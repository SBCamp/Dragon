<Window x:Class="PearlDragon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PearlDragon"
        Loaded="Window_Loaded"
        mc:Ignorable="d"
        Background="#ccd0d4" MinHeight="800" MinWidth="800"
        Title="Pearl Dragon" WindowState="Maximized">
    <Grid x:Name="grdMain">
        <Grid.ColumnDefinitions>
        <ColumnDefinition Width="3*"/>
        <ColumnDefinition Width="3*"/>
        <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        
        <ContentControl x:Name="MaintContent" IsTabStop="False" Grid.Column="1" Grid.Row="1" />
        
    </Grid>
</Window>
